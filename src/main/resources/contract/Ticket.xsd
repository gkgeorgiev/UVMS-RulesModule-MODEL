<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:ticket="urn:ticket.rules.schema.fisheries.ec.europa.eu:v1" 
            targetNamespace="urn:ticket.rules.schema.fisheries.ec.europa.eu:v1"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
            xmlns="http://schemas.xmlsoap.org/wsdl/">

    <xsd:complexType name="TicketType">
        <xsd:sequence>
            <xsd:element name="guid" type="xsd:string"/>
            <xsd:element name="status" type="ticket:TicketStatusType"/>
            <xsd:element name="openDate" type="xsd:string"/>
            <xsd:element name="vesselGuid" type="xsd:string"/>
            <xsd:element name="ruleName" type="xsd:string"/>
            <xsd:element name="movement" type="ticket:MovementType"/>
            <xsd:element name="updated" type="xsd:string"/>
            <xsd:element name="updatedBy" type="xsd:string"/>
        </xsd:sequence>
    </xsd:complexType>
    
    <xsd:simpleType name="TicketStatusType">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="OPEN"/>
            <xsd:enumeration value="PENDING"/>
            <xsd:enumeration value="CLOSED"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:complexType name="MovementType">
        <xsd:sequence>
            <xsd:element name="guid" type="xsd:string"/>
            <xsd:element name="latitude" type="xsd:double" nillable="true"/>
            <xsd:element name="longitude" type="xsd:double" nillable="true"/>
            <xsd:element name="timestamp" type="xsd:string"/>
        </xsd:sequence>
    </xsd:complexType>
    
</xsd:schema>
